<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="center|left"

            android:layout_height="50dp">

            <com.task.dd.greenbox.tool.GradientImageView
                android:layout_width="40dp"
                android:src="@mipmap/shux100"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:id="@+id/iv_com_item_user" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_com_item_user"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:layout_weight="0.25" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time"
                    android:layout_marginLeft="10dp"
                    android:text="01-26 15:14"/>
            </LinearLayout>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_margin="3dp"
            android:background="#cecece">

        </View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="我的新发明，用我的手绘碗种花，专门哦买了一个打孔机，已经熟练打孔技术，女汉子"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/result_view"
            android:id="@+id/tv_com_item_desc"
            />

        <com.task.dd.greenbox.tool.CustomGridView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/gv_com_item"
            android:numColumns="3"
            android:verticalSpacing="5dp"
            android:horizontalSpacing="-5dp"
            android:layout_marginRight="10dp"
            android:scrollbars="none"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:background="#cecece"
            android:layout_height="5dp"/>



</LinearLayout>