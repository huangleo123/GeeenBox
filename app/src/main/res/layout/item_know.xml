<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:src="@mipmap/ic_greedbox80xr"
        android:layout_margin="10dp"
        android:id="@+id/iv_know_list" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/iv_know_list"
        android:maxLines="1"
        android:text="吊兰的养殖方法，它的功效和作用是"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/id_know_title"
        android:layout_toRightOf="@+id/iv_know_list" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_know_list"
        android:layout_toRightOf="@+id/iv_know_list"
        android:layout_marginLeft="5dp"
        android:text="2015-07-30 10:10:56"
        android:maxLines="1"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:id="@+id/id_know_time"
        />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="80dp"
        android:layout_centerInParent="true"
        android:layout_alignBottom="@+id/id_know_time"
        android:layout_toRightOf="@+id/id_know_time"
        android:src="@mipmap/icon_view"
        android:scaleX="1.3"
        android:scaleY="1"
        android:id="@+id/id_item_iv_user"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:maxLines="1"
        android:ellipsize="end"

        android:layout_alignBottom="@+id/id_item_iv_user"
        android:layout_toRightOf="@+id/id_item_iv_user"
        android:id="@+id/id_item_uname" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300"
        android:maxLines="1"
        android:layout_marginLeft="10dp"
        android:id="@+id/tv_know_view_nm"
        android:layout_alignBottom="@+id/id_item_uname"
        android:layout_toRightOf="@+id/id_item_uname"

        />
    <View
        android:layout_width="match_parent"
        android:background="#cecece"
        android:layout_height="1dp"
        android:layout_marginBottom="-10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/iv_know_list">

    </View>



</RelativeLayout>