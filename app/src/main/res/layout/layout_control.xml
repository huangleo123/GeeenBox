<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#F0EEE4"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.1"
        android:layout_gravity="left"
        android:layout_height="0dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:scaleY="0.9"
            android:scaleX="0.9"
            android:src="@mipmap/icon_left_run"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.98"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="我的榴莲"/>
        <TextView
            android:layout_width="50dp"
            android:text=""
            android:layout_weight="0.1"

            android:layout_height="match_parent" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.9"
        android:background="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_height="0dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="15dp"
            android:background="@color/action_press"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"

                android:background="#ffffff"
                android:gravity="bottom"
                android:layout_gravity="bottom">
                <ProgressBar
                android:id="@+id/progressbar_sun"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:max="100"
                android:progress="86"
                android:layout_marginLeft="20dp"
                android:progressDrawable="@drawable/progress_vertical"
                android:layout_weight="0.2" />
                <ProgressBar
                android:id="@+id/progressbar_temperature"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:max="32"
                android:progress="26"
                android:layout_marginLeft="20dp"
                android:progressDrawable="@drawable/progress_vertical"

                android:layout_weight="0.2" />
                <ProgressBar
                android:id="@+id/progressbar_air"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:max="50"
                android:layout_marginLeft="20dp"
                android:progress="32"
                android:progressDrawable="@drawable/progress_vertical"
                android:layout_weight="0.2" />
                <ProgressBar
                android:id="@+id/progressbar_soil"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:indeterminate="false"
                android:layout_marginLeft="20dp"
                android:indeterminateOnly="false"
                android:max="100"
                android:progress="40"
                android:progressDrawable="@drawable/progress_vertical"
                android:layout_weight="0.2" />
                <ProgressBar
                android:id="@+id/progressbar_water"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:indeterminate="false"
                android:indeterminateOnly="false"
                android:max="4"
                android:progress="3"
                android:layout_marginLeft="20dp"
                android:progressDrawable="@drawable/progress_vertical_water"

                android:layout_marginRight="20dp"
                android:layout_weight="0.2" />
            </LinearLayout>

        </FrameLayout>


    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="0.4"
        android:background="#dfdf"
        android:layout_height="0dp">

    </FrameLayout>

</LinearLayout>